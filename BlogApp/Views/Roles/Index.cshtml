@model IEnumerable<ApplicationRole>
    <a class="btn btn-primary" asp-action="Create">Rol oluştur</a>
    <hr>

    <table class="table table-sm table-bordered">
        <thead>
        <tr>
            <th>Kullanıcı Id</th>
            <th>Rol Adı</th>
            <th>Kullanıcılar</th>
            <th style="width: 125px;"></th>
        </tr>
        </thead>
        @if(Model.Count() == 0){
            <tr><td colspan="4" class="text-center">Rol Yok</td></tr>
        }   

        @foreach(var role in Model){
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
                <td asp-role-users="@role.Id"></td>
                <td>
                    <form method="post">
                        <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@role.Id">Edit</a>
                        <button type="submit" class="btn btn-sm btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
        }
    </table>
  