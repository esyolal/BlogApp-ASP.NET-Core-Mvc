@model BlogApp.Data.Posts

@{
    ViewData["Title"] = "Post Detayları";
}

<style>
    .post-container {
        background-color: #3498db;
        color: white;
        padding: 20px;
        margin-bottom: 20px;
        border-radius: 8px;
    }

    .comment-container {
        background-color: #333;
        color: white;
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 8px;
        display: flex;
        align-items: center;
    }

    .comment-container img {
        border-radius: 50%;
        margin-right: 10px;
    }
</style>
<h2 class="mb-4 text-center">Post Detayları</h2>
<div class="row">
    <div class="col-sm-3 col-md-2">
    </div>
    <div class="col-sm-6 col-md-8">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="post-container">
                    
                    <img src="data:image/png;base64,@(Model.PictureSource != null ? Convert.ToBase64String(Model.PictureSource) : string.Empty)"
                        width="100px" />

                    <div class="user-info">
                        <strong>@Model.UserName</strong> - @Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")
                        <p class="mb-0">@Model.Content</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-2">
    </div>
</div>

<div class="row">
    <div class="col-sm-3 col-md-2">
    </div>
    <div class="col-sm-6 col-md-8">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <hr>
                <h3>Yorumlar</h3>
                @if (Model.Comments != null && Model.Comments.Any())
                {
                    foreach (var comment in Model.Comments)
                    {
                        <div class="comment-container">
                            @if (comment.UserPictureSource != null)
                            {
                                <img src="data:image/png;base64,@(Convert.ToBase64String(comment.UserPictureSource))" width="50px" />
                            }
                            <div>
                                <p><strong>@comment.UserName</strong></p>
                                <p>@comment.Content</p>
                                <p>@comment.CreatedAt.ToString("dd.MM.yyyy HH:mm")</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p>Henüz hiç yorum yok.</p>
                }
            </div>
        </div>
    </div>
    <div class="col-sm-3 col-md-2">
    </div>
</div>


<h3>Yorum Ekle</h3>

<form asp-action="AddComment" asp-controller="Blog" method="post">
    <div class="mb-3">
        <input type="hidden" name="postId" value="@Model.PostId" />
        <label for="commentContent" class="form-label">Yorumunuz</label>
        <textarea class="form-control" style="resize: none;" name="commentContent" id="commentContent" rows="3"
            required></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Yorum Ekle</button>
</form>